# Dynamically generated by Chef - local modifications will be overwritten

[Unit]
Description=<%= @mailhog_name %>

[Service]
<% @mailhog['config'].each do |key, value| %>
<% if value != nil %>
Environment=<%= "#{key}=#{value}" %>
<% end %>
<% end %>
Type=simple
WorkingDirectory=/tmp
User=root
Group=root
PIDFile=/run/<%= @mailhog_name %>.pid
ExecStart=<%= @mailhog['binary']['path'] %> > /dev/null 2>&1 &
ExecStop=/bin/kill -SIGTERM $MAINPID
ExecReload=/bin/kill -s HUP $MAINPID
KillMode=process
KillSignal=SIGQUIT
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target
